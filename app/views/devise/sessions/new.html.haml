.a-section.top-section
  .a-section
    .top-logo
      = link_to "/" do
        %i.a-icon.a-icon-logo
        %i.a-icon.a-icon-jp
  .a-section.authportal-center
    .a-section.authportal-main
      .a-section.auth-container
        .a-section
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            = devise_error_messages!
            .form
              .form-inner
                %h1
                  ログイン
                .require-fields
                  .a-row.a-spacing-match-group
                    .field
                      .field-label
                        = f.label :email
                      .field-input
                        = f.email_field :email
                .require-fields
                  .a-row.a-spacing-match-group
                    .field
                      = f.label :password
                      = f.password_field :password, autocomplete: "off"
                .a-raw.a-spacing-large
                  %span.a-button.a-button-orange
                    %span.a-button-inner
                      = f.submit
                      %span.a-button-text
                        ログイン
                - if devise_mapping.rememberable?
                  .a-row.a-spacing-medium
                    .a-section
                    .field
                      = f.check_box :remember_me
                      = f.label :remember_me
                .a-divider
                  %h5 Amazonの新しいお客様ですか？
                %span.a-button
                  %span.a-button-inner
                    = link_to new_registration_path(resource_name), class: "a-button-text"  do
                      Amazonアカウントを作成
                    
